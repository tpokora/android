<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/blackred"
    tools:context="com.helloworld.tomek.helloworld.NewIntention">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="@string/hello_world"
        style="@style/editTextStyle" />

    <Button
        android:id="@+id/onetButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20dp"
        android:text="@string/onetButtonText"
        android:onClick="onetButtonClick"
        style="@style/buttonStyle"/>/>

    <EditText
        android:id="@+id/urlEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/onetButton"
        android:layout_marginTop="20dp"
        android:hint="@string/urlEditHint"
        style="@style/editTextStyle" />

    <Button
        android:id="@+id/urlButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/urlEditText"
        android:layout_marginTop="20dp"
        android:text="@string/urlButtonText"
        android:onClick="goToUrlButtonClick"
        style="@style/buttonStyle"/>

</RelativeLayout>
